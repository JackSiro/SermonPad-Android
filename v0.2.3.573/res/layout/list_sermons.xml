<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
	android:layout_margin="0dp" >
    
	<RelativeLayout
		android:id="@+id/header"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentTop="true"
		android:background="#C90"
		android:gravity="center" >
		
   		<TextView
		    android:id="@+id/sermondet"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
	        android:gravity="center"
		    android:layout_weight="1"
		    android:background="#C90"
		    android:padding="10dp"
		    android:text="Preacher"
		    android:visibility="gone"
		    android:singleLine="true"
		    android:textColor="#fff"
		    android:textSize="20sp" />
   		
	</RelativeLayout>
	
	<RelativeLayout
		android:id="@+id/footer"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
		android:background="#C90"
		android:layout_margin="0dp"
		android:gravity="center" >
	
	  	<TableLayout
		    android:id="@+id/myToolbar"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content" >
	
		    <TableRow
		        android:id="@+id/tableRow2"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content" >

		        <ImageButton
		            android:id="@+id/newnote"
		            android:layout_width="wrap_content"
		            android:layout_height="50dp"
		            android:layout_weight="1"
		            android:background="#C90"
		            android:onClick="NewSermon"
		            android:padding="5dp"
		    		android:src="@drawable/ic_menu_plus" />
		        
		        <ImageButton
		            android:id="@+id/sortlist"
		            android:layout_width="wrap_content"
		            android:layout_height="50dp"
		            android:layout_weight="1"
		            android:background="#C90"
		            android:onClick="SortList"
		            android:padding="5dp"
		    		android:src="@drawable/ic_action_sort" />
		        
		        <ImageButton
		            android:id="@+id/trashbin"
		            android:layout_width="wrap_content"
		            android:layout_height="50dp"
		            android:layout_weight="1"
		            android:background="#C90"
		            android:onClick="Trashbin"
		            android:padding="5dp"
		    		android:src="@drawable/ic_action_trashbin" />
		        
		        <ImageButton
		            android:id="@+id/settings"
		            android:layout_width="wrap_content"
		            android:layout_height="50dp"
		            android:layout_weight="1"
		            android:background="#C90"
		            android:onClick="Settings"
		            android:padding="5dp"
		    		android:src="@drawable/ic_menu_settings" />
		        
		    </TableRow>
		</TableLayout>
		
	</RelativeLayout>
    <ListView
       android:id="@+id/list"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
		android:layout_below="@id/header"
		android:layout_above="@id/footer" >
        
    </ListView>

</RelativeLayout>
