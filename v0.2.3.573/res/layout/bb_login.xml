<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
  	android:layout_height="fill_parent" 
	android:background="@drawable/noteback" >
  	
	<RelativeLayout
	    android:id="@+id/toplayout"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_alignParentTop="true"	    
		android:padding="5dp" >
		
     <ImageView
         android:id="@+id/image"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_centerHorizontal="true"
         android:layout_centerVertical="true"
         android:paddingLeft="10dp"
         android:paddingRight="10dp"
         android:layout_margin="20dp"
         android:src="@drawable/tithing" />

	</RelativeLayout>

	<RelativeLayout
	    android:id="@+id/secolayout"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_below="@+id/toplayout"
	    android:layout_centerHorizontal="true"
	    android:layout_marginTop="-100dp"
	    android:padding="3dp" >
	    
     <TextView
         android:id="@+id/instruct"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_centerHorizontal="true"
         android:layout_marginLeft="20dp"
         android:layout_marginRight="20dp"
         android:gravity="center"
         android:text="@string/please_pin_here"
         android:textColor="#000"
         android:textSize="20dp" />

       <EditText
           android:id="@+id/tithespin"
           android:layout_width="100dp"
           android:layout_height="wrap_content"
           android:layout_below="@+id/instruct"
           android:layout_centerHorizontal="true"
           android:background="@drawable/textview_border"
           android:ems="10"
           android:gravity="center"
           android:hint="****"
           android:imeOptions="actionNext"
           android:inputType="numberPassword"
           android:padding="10dp"
           android:singleLine="true"
           android:textSize="22sp" />

       <Button
           android:id="@+id/logmein"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_centerHorizontal="true"
           android:layout_below="@+id/tithespin"
           android:layout_margin="5dp"
           android:layout_weight="1"
           android:background="@drawable/textview_border"
           android:onClick="LogMeIn"
           android:text="Login"
           android:textSize="20sp" />
       
	</RelativeLayout>
    
</RelativeLayout>
